{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "module": "NodeNext",
    "outDir": "dist",
    "exclude": ["node_modules", "dist"]
  }
}
